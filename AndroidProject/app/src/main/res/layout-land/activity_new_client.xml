<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="15dp"
    android:orientation="vertical"
    tools:context=".Client.NewClient">

    <TextView
        android:id="@+id/saisie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saisissez les informations suivantes :"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/nouveauClientNom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom "
        app:layout_constraintBottom_toTopOf="@+id/nouveauClientPrenom"
        app:layout_constraintTop_toBottomOf="@+id/saisie"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/nouveauClientPrenom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:hint="Prénom "
        app:layout_constraintBottom_toTopOf="@+id/nouveauClientMail"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/nouveauClientMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adreese mail"

        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/nouveauClientPass"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/nouveauClientPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/nouveauClientPassConf"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/nouveauClientPassConf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirmez votre mot de passe"
        android:inputType="textPassword"

        app:layout_constraintBottom_toTopOf="@+id/nouveauClientPhone"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/nouveauClientPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numéro de téléphone"
        android:inputType="textPassword"

        app:layout_constraintBottom_toTopOf="@+id/send"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="créer votre compte"

        app:layout_constraintBottom_toTopOf="@+id/Annuler"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/Annuler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f00"
        android:text="oups !"
        android:textColor="#FFF"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>