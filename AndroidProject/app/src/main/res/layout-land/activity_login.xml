<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/InfoApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        android:text="Eat it pour smartphone" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="139dp"
            android:layout_height="122dp"
            android:layout_marginHorizontal="95dp"
            android:layout_marginBottom="20dp"
            android:background="#0F6"
            android:gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/eat_it_logo" />

        <TextView
            android:id="@+id/qui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <EditText
        android:id="@+id/mail"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="1dp"
        android:gravity="center_horizontal"

        android:hint="@string/adrname" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="1dp"
        android:gravity="center_horizontal"
        android:hint="@string/mdp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/connexion"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center_horizontal"
        android:text="Se connecter"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginBottom="8dp"
        android:text="vous êtes nouveau  :"

        android:textAlignment="center" />

    <Button
        android:id="@+id/nouveau"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="30dp"
        android:text="créer un nouveau compte "
        android:textAlignment="center"
        android:textColor="#00F" />


</LinearLayout>