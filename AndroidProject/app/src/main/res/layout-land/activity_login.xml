<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InfoApp" />

    <TextView
        android:id="@+id/InfoApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Eat it pour smartphone"

        />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="127dp"
        android:layout_height="81dp"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="8dp"
        android:background="#0F6"
        android:scaleType="centerInside"
        android:src="@drawable/eat_it_logo"
        app:layout_constraintBottom_toTopOf="@+id/mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InfoApp" />

    <TextView
        android:id="@+id/qui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center_horizontal"
        android:hint="@string/adrname"

        app:layout_constraintBottom_toTopOf="@+id/pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="268dp"
        android:layout_height="52dp"
        android:gravity="center_horizontal"
        android:hint="@string/mdp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/connexion"
        app:layout_constraintEnd_toEndOf="@+id/connexion"
        app:layout_constraintStart_toStartOf="@+id/connexion" />

    <ImageView
        android:id="@+id/see"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:src="@drawable/eye"
        app:layout_constraintEnd_toEndOf="@+id/connexion"
        app:layout_constraintStart_toEndOf="@+id/pass"
        tools:layout_editor_absoluteY="185dp" />

    <Button
        android:id="@+id/nouveau"
        android:layout_width="510dp"
        android:layout_height="68dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="16dp"
        android:text="créer un nouveau compte "
        android:textAlignment="center"
        android:textColor="#00F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/connexion"
        android:layout_width="510dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center_horizontal"
        android:text="Se connecter"

        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="317dp"
        android:layout_height="30dp"

        android:text="vous êtes nouveau  :"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/nouveau"
        app:layout_constraintEnd_toEndOf="@+id/nouveau"
        app:layout_constraintStart_toStartOf="@+id/nouveau" />


</androidx.constraintlayout.widget.ConstraintLayout>