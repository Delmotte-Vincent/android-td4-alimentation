<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom du commercant"
        android:id="@+id/frag_com_nom"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/noimageavailable"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/frag_com_im"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="desc du commercant"
        android:textSize="15sp"
        android:id="@+id/frag_com_desc"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/frag_com_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="S'abonner"/>


</LinearLayout>