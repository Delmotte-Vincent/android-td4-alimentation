<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Commercant.MainCommercant">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Accueil"
        android:textAlignment="center"
        android:textSize="25dp"
        android:background="#537fd7"
        android:textColor="#FFFFFF"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/photo_profil_base"
        android:layout_marginTop="20dp"
        app:civ_border_color="#000"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/nom_prenom"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:text="Nom - Prénom"/>

    <TextView
        android:id="@+id/profil_commercant"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:text="Nom du magasin\nHoraires : 9h00 - 17h00"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Catégories :"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/categorie_button"
        android:text="Modifier les catégories"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/but_signal"
        android:text="Envoyer le signalement"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_height="50dp"/>

</LinearLayout>