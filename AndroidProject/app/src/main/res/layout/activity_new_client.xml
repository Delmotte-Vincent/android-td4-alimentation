<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Client.NewClient"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_marginHorizontal="15dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saisissez les informations suivantes :"
        android:id="@+id/saisie"
        android:textAlignment="center"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom "
        android:id="@+id/nouveauClientNom"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prénom "
        android:id="@+id/nouveauClientPrenom"


        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Adreese mail"
        android:id="@+id/nouveauClientMail"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:id="@+id/nouveauClientPass"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirmez votre mot de passe"
        android:inputType="textPassword"
        android:id="@+id/nouveauClientPassConf"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numéro de téléphone"
        android:inputType="textPassword"
        android:id="@+id/nouveauClientPhone"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="créer votre compte"
        android:id="@+id/send"
        android:layout_marginBottom="150dp"

        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="oups !"
        android:textColor="#FFF"
        android:background="#f00"
        android:textSize="18dp"
        android:id="@+id/Annuler"
        />




</LinearLayout>