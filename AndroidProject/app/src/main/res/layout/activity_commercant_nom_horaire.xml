<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Commercant.CommercantNomHoraire">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Nom et horaire"
        android:textAlignment="center"
        android:textSize="25dp"
        android:background="#537fd7"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/nom_magasin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="Nom du magasin" />

    <Button
        android:id="@+id/nom_magasin_button"
        android:text="Modifier le nom du magasin"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/horaire_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Horaires" />

    <Button
        android:id="@+id/horaire_button"
        android:text="Modifier les horaires"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_height="50dp"/>

</LinearLayout>